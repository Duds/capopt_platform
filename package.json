{
  "name": "capopt-platform",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx scripts/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:backup": "pg_dump $DATABASE_URL > backup_$(date +%Y%m%d_%H%M%S).sql",
    "migrate:master-data": "tsx scripts/migrate-master-data.ts",
    "migrate:entities-to-graph": "tsx scripts/migrate-entities-to-graph.ts",
    "migrate:create-relationships": "tsx scripts/create-hierarchy-relationships.ts && tsx scripts/create-canvas-relationships.ts",
    "migrate:generate-hierarchy-paths": "tsx scripts/generate-hierarchy-paths.ts",
    "migrate:all": "npm run migrate:master-data && npm run migrate:entities-to-graph && npm run migrate:create-relationships && npm run migrate:generate-hierarchy-paths",
    "validate:migration": "tsx scripts/validate-migration.ts",
    "test:performance": "tsx scripts/performance-test.ts",
    "deploy:graph-migration": "bash scripts/deploy-graph-migration.sh",
    "monitor:graph": "tsx scripts/monitor-graph-performance.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "@radix-ui/react-accordion": "^1.1.2",
